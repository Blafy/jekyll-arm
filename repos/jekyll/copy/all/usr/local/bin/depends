#!/bin/bash
[ "$JEKYLL_DEBUG" = "true" ] && set -x
set -e

if [ ! -f /updated ]; then
  apk update
  apk add build-base ruby-dev
  touch /updated

  if [ -f ".apk" ] && [ "$CONNECTED" = "true" ]
    then apk --update add $(
      cat .apk
    )
  fi
fi

BUNDLE_ARGS="--jobs=1"
if [ -f Gemfile ]; then
  [ "$BUNDLE_CACHE" = "true" ] && BUNDLE_ARGS="--jobs=1 --path=vendor/bundle"

  if [ "$1" = "install" ]
    then bundle check > /dev/null 2>&1 || \
      sudo -EHu jekyll bundle install $BUNDLE_ARGS
  else
    sudo -EHu jekyll bundle "$@"
  fi
fi
